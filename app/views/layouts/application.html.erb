<!DOCTYPE html>
<html>
<head>
   <title><%= AtWork::ORGANIZATION %> at Work</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body role="document">
<nav class="navbar navbar-default">
  <div class="container">
  <div class="navbar-header">
    <h1><%= link_to AtWork::ORGANIZATION + "@ work", "/" %></h1>
  </div>
  <div id="navbar" class="navbar-collapse collapse">
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          Hello <%= current_user.first_name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="/logout">Logout</a></li>
            <% if current_user.admin? %>
              <li><%= link_to "Admin", :controller => "users" %></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
  </div>
</nav>

<div id="wrapper" class="container" role="main">
    <div id="errorExplanation"><%= flash[:notice] %></div>
    <div id="content" class="container-fluid">
    <%= yield %>
    </div>
</div>

</body>
</html>
